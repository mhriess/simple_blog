<%= link_to "Order by title", root_url(:order_by => :title )%>
<%= link_to "Order by word count", root_url(:order_by => :word_count )%>
<%= link_to "Order by published", root_url(:order_by => :published )%>

<% @articles.each do |article| %>

  <div class="article">
    <h3><%= article.title %></h3>
    <p>
      <%= raw truncate(article.body, length: 200, separator: '...') %>
      <br>
      <%= link_to 'Show', article %> |
      <%= link_to 'Edit', edit_article_path(article) %> |
      <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
<% end %>
